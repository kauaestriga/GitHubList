<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title_style">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="description_text_style">
        <item name="android:textSize">@dimen/description_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="counter_infos_style">
        <item name="android:textSize">@dimen/counter_size</item>
        <item name="android:textColor">@color/counter_color</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="username_style">
        <item name="android:textSize">@dimen/username_size</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fullname_style">
        <item name="android:textSize">@dimen/fullname_size</item>
        <item name="android:textColor">@color/name_color</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>